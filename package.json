{
  "name": "comma-cli",
  "version": "0.1.2",
  "description": "A command-line command manager for saving, organizing, and executing frequently used shell commands.",
  "bin": {
    "comma-cli": "run.js"
  },
  "scripts": {
    "postinstall": "node install.js",
    "dev": "bun run --watch src/index.tsx",
    "start": "bun run src/index.tsx",
    "typecheck": "tsc --noEmit",
    "build": "bun run scripts/build.ts",
    "build:all": "bun run scripts/build.ts --all",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run scripts/release.ts",
    "release:dry": "bun run scripts/release.ts --dry-run"
  },
  "files": [
    "install.js",
    "run.js",
    "README.md"
  ],
  "keywords": [
    "cli",
    "command-manager",
    "shell",
    "terminal",
    "commands",
    "shortcuts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/superhighfives/comma-cli.git"
  },
  "bugs": {
    "url": "https://github.com/superhighfives/comma-cli/issues"
  },
  "homepage": "https://github.com/superhighfives/comma-cli#readme",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "0.0.0-20260106-bb82df43",
    "@opentui/react": "0.0.0-20260106-bb82df43",
    "comma-cli-darwin-arm64": "^0.1.0",
    "fuse.js": "^7.1.0",
    "react": "^19.2.3"
  }
}
